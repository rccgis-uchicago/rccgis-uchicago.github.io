---
import Layout from '../layouts/Layout.astro';
import { Mail, Clock, HelpCircle } from 'lucide-astro';

const contactMethods = [
  {
    icon: Mail,
    title: 'Email Support',
    description: 'gis-help@rcc.uchicago.edu',
    href: 'mailto:gis-help@rcc.uchicago.edu'
  },
  {
    icon: Mail,
    title: 'General Inquiries',
    description: 'help@rcc.uchicago.edu',
    href: 'mailto:help@rcc.uchicago.edu'
  },
  {
    icon: Clock,
    title: 'Weekly Helpdesk Hours',
    description: 'Thursday, 1:00 PM - 3:00 PM',
    href: null
  }
];
---

<Layout title="Contact RCC-GIS">
  <div class="container mx-auto px-4 py-16 max-w-4xl">
    <h1 class="text-4xl font-bold mb-8">Get Support</h1>
    
    <div class="space-y-12">
      {/* Contact Methods */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {contactMethods.map(({ icon: Icon, title, description, href }, index) => (
          <div key={index} class="p-6 rounded-lg border bg-white hover:shadow-md transition-shadow">
            <Icon class="h-8 w-8 mb-4 text-blue-600" />
            <h3 class="text-xl font-semibold mb-2">{title}</h3>
            {href ? (
              <a href={href} class="text-blue-600 hover:text-blue-800 transition-colors break-words">
                {description}
              </a>
            ) : (
              <p class="text-gray-700">{description}</p>
            )}
          </div>
        ))}
      </div>

      {/* Support Information */}
      <div class="bg-blue-50 p-8 rounded-lg border border-blue-100">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <HelpCircle class="h-6 w-6 text-blue-600 mt-1" />
          </div>
          <div class="ml-3">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">How We Can Help</h2>
            <div class="prose">
              <p class="text-gray-700 mb-4">
                The RCC-GIS team provides support for:
              </p>
              <ul class="list-disc pl-5 space-y-2 text-gray-700">
                <li>GIS Software: Assistance with ArcGIS, QGIS, and other GIS tools</li>
                <li>Geospatial Data: Access to shared datasets and help with data management</li>
                <li>Geocoding Services: Support for geocoding processes and troubleshooting</li>
                <li>Training and Workshops: Guidance on GIS methods and software usage</li>
                <li>Consultations: One-on-one support for advanced GIS projects</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    {/* Additional Information */}
    <div class="mt-12 bg-gray-50 p-6 rounded-lg border">
      <h3 class="text-lg font-semibold mb-4">Additional Information</h3>
      <div class="prose">
        <p class="text-gray-700">
          For general inquiries or to schedule a consultation, please email us at 
          <a href="mailto:gis-help@rcc.uchicago.edu" class="text-blue-600 hover:underline">gis-help@rcc.uchicago.edu</a>.
        </p>
      </div>
    </div>
  </div>
</Layout>