---
import Layout from '../../layouts/Layout.astro';
import { BookOpen, Code, Database, Map, Server, Book, GitBranch, Layers } from 'lucide-astro';

const tutorials = [
  {
    title: 'Deep Learning for Geospatial Science',
    description: 'Explore deep learning methods for geospatial data, including neural networks, image classification, and spatial feature extraction with Python.',
    url: 'https://github.com/rcc-uchicago/Geocomputation_workshop',
    icon: Layers,
    tags: ['deep learning', 'geospatial', 'python']
  },
  {
    title: 'Geospatial Python Series 2',
    description: 'Advanced spatial data analysis and visualization techniques using Python. Second in the series.',
    url: 'https://github.com/rccgis-uchicago/geospatial_python_series2',
    icon: Layers,
    tags: ['python', 'geospatial', 'advanced']
  },
  {
    title: 'Geospatial Python Series 1',
    description: 'Introduction to geospatial concepts and Python libraries for spatial data processing. First in the series.',
    url: 'https://github.com/rccgis-uchicago/geospatial_python_series1',
    icon: Layers,
    tags: ['python', 'geospatial', 'introductory']
  },
  {
    title: 'Network Analysis and Visualization',
    description: 'Learn how to analyze and visualize network data using GIS techniques.',
    url: 'https://github.com/pnsinha/Network-Analysis-and-Visualization',
    icon: GitBranch,
    tags: ['network analysis', 'visualization', 'python']
  },
  {
    title: 'Geocomputation Workshop',
    description: 'Introduction to geocomputation concepts and tools for spatial analysis.',
    url: 'https://github.com/rcc-uchicago/Geocomputation_workshop',
    icon: Code,
    tags: ['geocomputation', 'python', 'spatial analysis']
  },
  {
    title: 'Geocoding Techniques',
    description: 'Comprehensive guide to geocoding addresses and working with location data.',
    url: 'https://github.com/rcc-uchicago/geocoding',
    icon: Map,
    tags: ['geocoding', 'address matching', 'python']
  },
  {
    title: 'Spatial Machine Learning',
    description: 'Introduction to machine learning techniques for spatial data analysis.',
    url: 'https://github.com/rcc-uchicago/spatial_machinelearning',
    icon: Layers,
    tags: ['machine learning', 'spatial analysis', 'python']
  },
  {
    title: 'Spatial Statistics with R',
    description: 'Learn spatial statistical methods and their implementation in R.',
    url: 'https://github.com/rcc-uchicago/SpatialStatistics_R',
    icon: Book,
    tags: ['spatial statistics', 'R', 'data analysis']
  },
  {
    title: 'Spatial Analysis with R',
    description: 'Comprehensive guide to spatial analysis techniques using R.',
    url: 'https://github.com/rcc-uchicago/SpatialAnalysis_R',
    icon: Database,
    tags: ['spatial analysis', 'R', 'data visualization']
  },
  {
    title: 'Satellite Image Analysis',
    description: 'Introduction to processing and analyzing satellite imagery.',
    url: 'https://github.com/rcc-uchicago/Satelite_image_intro',
    icon: Layers,
    tags: ['remote sensing', 'satellite imagery', 'python']
  },
  {
    title: 'GDAL Introduction',
    description: 'Getting started with GDAL for geospatial data processing.',
    url: 'https://github.com/rcc-uchicago/gdal_introduction',
    icon: Code,
    tags: ['GDAL', 'geospatial data', 'command line']
  },
  {
    title: 'PPLP GIS Workshop',
    description: 'Workshop materials for Public Policy and Law Program in GIS.',
    url: 'https://github.com/rcc-uchicago/pplp_gisworkshop',
    icon: BookOpen,
    tags: ['workshop', 'public policy', 'law']
  }
];

// Extract all unique tags
const allTags = [...new Set(tutorials.flatMap(tutorial => tutorial.tags))].sort();
---

<Layout title="GIS Tutorials" description="Access our collection of GIS tutorials and learning resources.">
  <div class="py-12 bg-muted/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-4">
          GIS Tutorials & Learning Resources
        </h1>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Explore our collection of tutorials, workshops, and learning materials to enhance your GIS skills and knowledge.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-4">
        <!-- Sidebar with filters -->
        <div class="md:col-span-1">
          <div class="sticky top-24">
            <div class="bg-card p-6 rounded-lg shadow-sm border border-border">
              <h2 class="text-lg font-semibold text-foreground mb-4">Filter by Topic</h2>
              <div class="space-y-3">
                {allTags.map(tag => (
                  <div key={tag} class="flex items-center">
                    <input
                      id={`filter-${tag}`}
                      name="topic[]"
                      value={tag}
                      type="checkbox"
                      class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                    />
                    <label for={`filter-${tag}`} class="ml-3 text-sm text-foreground">
                      {tag}
                    </label>
                  </div>
                ))}
              </div>
              <button 
                type="button" 
                class="mt-4 w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
              >
                Apply Filters
              </button>
            </div>
            
            <div class="mt-6 bg-card p-6 rounded-lg shadow-sm border border-border">
              <h2 class="text-lg font-semibold text-foreground mb-4">Need Help?</h2>
              <p class="text-sm text-muted-foreground mb-4">
                Our team is here to support your learning journey. Contact us for personalized assistance.
              </p>
              <a 
                href="/contact" 
                class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-primary bg-primary/10 hover:bg-primary/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
              >
                Contact Support
              </a>
            </div>
          </div>
        </div>

        <!-- Tutorials Grid -->
        <div class="md:col-span-3">
          <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2">
            {tutorials.map((tutorial) => {
              const Icon = tutorial.icon;
              return (
                <a 
                  href={tutorial.url} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex flex-col h-full bg-card rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 border border-border overflow-hidden"
                >
                  <div class="p-6 flex-1 flex flex-col">
                    <div class="flex items-center mb-4">
                      <div class="p-2 rounded-lg bg-primary/10 text-primary">
                        <Icon class="h-5 w-5" />
                      </div>
                      <h3 class="ml-3 text-lg font-semibold text-foreground group-hover:text-primary">
                        {tutorial.title}
                      </h3>
                    </div>
                    <p class="text-muted-foreground flex-1">
                      {tutorial.description}
                    </p>
                    <div class="mt-4 flex flex-wrap gap-2">
                      {tutorial.tags.map(tag => (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-muted text-muted-foreground">
                          {tag}
                        </span>
                      ))}
                    </div>
                    <div class="mt-4 pt-4 border-t border-border/50 flex items-center text-sm font-medium text-primary">
                      <span>View Tutorial</span>
                      <svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
      </div>
    </div>
    </div>
    <!-- Rendered Jupyter Notebooks Section -->
    <div class="mt-16 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-4">Tutorial Notebooks</h2>
      <p class="mb-4 text-muted-foreground">
        Explore interactive and static Jupyter notebook tutorials. Notebooks can be embedded below as HTML or linked for download. To add a new notebook, export it as HTML and place it in <code>public/notebooks/</code>. Then, add an <code>&lt;iframe&gt;</code> or link here.
      </p>
      <!-- Geospatial Python Series 2 Notebook -->
      <div class="border rounded shadow bg-white overflow-x-auto mb-8">
        <h3 class="text-xl font-semibold mb-2">Geospatial Python Series 2</h3>
        <iframe src="/notebooks/geospatial_python_series2.html" width="100%" height="200" title="Geospatial Python Series 2 Notebook" style="border:none;"></iframe>
        <div class="mt-2 text-sm">
          <a href="/notebooks/geospatial_python_series2.ipynb" download class="text-blue-700 underline">Download notebook (.ipynb)</a>
          &nbsp;|&nbsp;
          <a href="/notebooks/geospatial_python_series2.html" download class="text-blue-700 underline">Download as HTML</a>
        </div>
      </div>
      <!-- Geospatial Python Series 1 Notebook -->
      <div class="border rounded shadow bg-white overflow-x-auto mb-8">
        <h3 class="text-xl font-semibold mb-2">Geospatial Python Series 1</h3>
        <iframe src="/notebooks/geospatial_python_series1.html" width="100%" height="200" title="Geospatial Python Series 1 Notebook" style="border:none;"></iframe>
        <div class="mt-2 text-sm">
          <a href="/notebooks/geospatial_python_series1.ipynb" download class="text-blue-700 underline">Download notebook (.ipynb)</a>
          &nbsp;|&nbsp;
          <a href="/notebooks/geospatial_python_series1.html" download class="text-blue-700 underline">Download as HTML</a>
        </div>
      </div>
      <!-- Deep Learning for Geospatial Science Notebook -->
      <div class="border rounded shadow bg-white overflow-x-auto mb-8">
        <h3 class="text-xl font-semibold mb-2">Deep Learning for Geospatial Science</h3>
        <iframe src="/notebooks/materials.html" width="100%" height="200" title="Deep Learning for Geospatial Science Notebook" style="border:none;"></iframe>
        <div class="mt-2 text-sm">
          <a href="/notebooks/materials.ipynb" download class="text-blue-700 underline">Download notebook (.ipynb)</a>
          &nbsp;|&nbsp;
          <a href="/notebooks/materials.html" download class="text-blue-700 underline">Download as HTML</a>
        </div>
      </div>

    </div>
  </div>
</Layout>
