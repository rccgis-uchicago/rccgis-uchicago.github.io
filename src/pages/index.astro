---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getImagePath } from '../utils/images';

// Use local image instead of remote URL
const bgImagePath = getImagePath('bg.jpg');

// SVG Icons
const icons = {
  map: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon><line x1="8" y1="2" x2="8" y2="18"></line><line x1="16" y1="6" x2="16" y2="22"></line></svg>`,
  database: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"></ellipse><path d="M3 5V19A9 3 0 0 0 21 19V5"></path><path d="M3 12A9 3 0 0 0 21 12"></path></svg>`,
  school: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 22v-4a2 2 0 1 0-4 0v4"></path><path d="m18 10 4-2-8-4-8 4 4 2"></path><path d="M18 5v9"></path><path d="m6 12 8 4 7-3v-5"></path><path d="m4 17 6 3 6-3v-3"></path></svg>`,
  users: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>`
};


const features = [
  {
    icon: 'map',
    title: 'GIS Software',
    description: 'Access ArcGIS Pro, QGIS, and specialized tools',
    href: '/resources/software'
  },
  {
    icon: 'database',
    title: 'Data Resources',
    description: 'Chicago GIS data portal and spatial datasets',
    href: '/resources/data'
  },
  {
    icon: 'school',
    title: 'Workshops',
    description: 'GIS workshops and learning resources',
    href: '/workshops'
  },
  {
    icon: 'users',
    title: 'Support',
    description: 'Expert consultation and technical assistance',
    href: '/contact'
  }
];
---

<Layout title="CyberGIS at UChicago">
  <!-- Hero Section -->
  <section class="relative h-[600px] w-full">
    <div class="absolute inset-0">
      <Image alt="CyberGIS Background"
        src={bgImagePath}
        width={1920} // Add appropriate width
        height={1080} // Add appropriate height
        class="w-full h-full object-cover brightness-[0.65] filter contrast-[1.1]"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/70"></div>
    </div>
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center text-white p-8">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          CyberGIS at UChicago
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
          Advanced spatial computing and analytics for research innovation
        </p>
        <div class="flex gap-4 justify-center">
          <a 
            href="/resources" 
            class="bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-md font-medium"
          >
            Explore Resources
          </a>
          <a 
            href="/contact" 
            class="bg-white/10 hover:bg-white/20 text-white px-6 py-3 rounded-md font-medium"
          >
            Get Support
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {features.map(({ icon, title, description, href }) => (
        <a 
          href={href}
          class="group block p-6 bg-card hover:shadow-lg transition-shadow rounded-lg border"
        >
          <span class="h-6 w-6 mb-4 text-primary" set:html={icons[icon]} />
          <h3 class="text-xl font-semibold mb-2">{title}</h3>
          <p class="text-muted-foreground">{description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-muted py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">About RCC-GIS</h2>
        <p class="text-lg mb-6">
          The University of Chicago's Research Computing Center (RCC) for Geographic Information Science (GIS) 
          is at the forefront of integrating Big Data, AI, and GIScience. Our commitment spans interdisciplinary 
          research in:
        </p>
        <ul class="list-disc list-inside space-y-2 mb-6 text-lg">
          <li>Geospatial big data analytics</li>
          <li>Spatial computing</li>
          <li>Geospatial AI (GeoAI)</li>
          <li>CyberGIS</li>
        </ul>
        <p class="text-lg">
          RCC-GIS engages in interdisciplinary research and education with UChicago users who want to incorporate 
          GIS methods and software. We offer comprehensive services including cartography, data mining, spatial 
          statistics, and high-performance computing solutions.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="container mx-auto px-4 py-16">
    <div class="text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Our team is here to help you with your GIS needs.
      </p>
      <a 
        href="/contact" 
        class="bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-md font-medium inline-block"
      >
        Contact Us
      </a>
    </div>
  </section>
</Layout>