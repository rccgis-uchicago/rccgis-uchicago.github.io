---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { Icon } from 'astro-icon/components';

const resources = [
  {
    title: 'Software',
    description: 'Access GIS software and tools',
    icon: 'lucide:laptop',
    href: '/resources/software'
  },
  {
    title: 'Data',
    description: 'Spatial datasets and collections',
    icon: 'lucide:database',
    href: '/resources/data'
  },
  {
    title: 'Lab Facilities',
    description: 'GIS workstations and facilities',
    icon: 'lucide:monitor',
    href: '/resources/labs'
  },
  {
    title: 'Imagery',
    description: 'Satellite and aerial imagery',
    icon: 'lucide:image',
    href: '/resources/imagery'
  }
];
---

<Layout title="GIS Resources">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8">GIS Resources</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {resources.map(({ title, description, icon, href }) => (
        <Card title={title}>
          <Icon name={icon} class="h-8 w-8 mb-4 text-primary" />
          <p class="text-muted-foreground mb-4">{description}</p>
          <a 
            href={href}
            class="text-primary hover:underline"
          >
            Learn more â†’
          </a>
        </Card>
      ))}
    </div>
  </div>
</Layout> 