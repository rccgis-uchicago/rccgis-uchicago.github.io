---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

const currentPath = Astro.url.pathname;

const resources = [
  { href: '/resources/software', label: 'Software' },
  { href: '/resources/data', label: 'Data' },
  { href: '/resources/labs', label: 'Lab Facilities' },
  { href: '/resources/imagery', label: 'Imagery' }
];

const services = [
  { href: '/services/computing', label: 'Computing Resources' },
  { href: '/services/geocoding', label: 'Geocoding' }
];

const projects = [
  { href: '/projects/webgis', label: 'WebGIS Projects' },
  { href: '/projects/geoai', label: 'GeoAI Projects' }
];
---


<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto flex h-16 items-center px-4">
    <div class="mr-4 flex items-center">
      <a href="/" class="mr-6 flex items-center space-x-2">
        <Image
          src="https://gis.rcc.uchicago.edu/wp-content/uploads/2024/02/LOGO_GIS_New_1.png"
          alt="RCC GIS Logo"
          width={120}
          height={40}
          class="h-10 w-auto"
        />
      </a>
      <nav class="flex space-x-6">
        <div class="relative group">
          <button class="flex items-center space-x-1 text-sm font-medium">
            <span>Resources</span>
            <Icon name="lucide:chevron-down" class="h-4 w-4" />
          </button>
          <div class="absolute left-0 top-full hidden group-hover:block w-48 bg-background border rounded-md shadow-lg p-2">
            {resources.map(({ href, label }) => (
              <a 
                href={href} 
                class:list={[
                  "block px-4 py-2 text-sm hover:bg-accent rounded-sm",
                  { "bg-accent": currentPath === href }
                ]}
              >
                {label}
              </a>
            ))}
          </div>
        </div>
        <div class="relative group">
          <button class="flex items-center space-x-1 text-sm font-medium">
            <span>Services</span>
            <Icon name="lucide:chevron-down" class="h-4 w-4" />
          </button>
          <div class="absolute left-0 top-full hidden group-hover:block w-48 bg-background border rounded-md shadow-lg p-2">
            {services.map(({ href, label }) => (
              <a 
                href={href} 
                class:list={[
                  "block px-4 py-2 text-sm hover:bg-accent rounded-sm",
                  { "bg-accent": currentPath === href }
                ]}
              >
                {label}
              </a>
            ))}
          </div>
        </div>
        <div class="relative group">
          <button class="flex items-center space-x-1 text-sm font-medium">
            <span>Projects</span>
            <Icon name="lucide:chevron-down" class="h-4 w-4" />
          </button>
          <div class="absolute left-0 top-full hidden group-hover:block w-48 bg-background border rounded-md shadow-lg p-2">
            {projects.map(({ href, label }) => (
              <a 
                href={href} 
                class:list={[
                  "block px-4 py-2 text-sm hover:bg-accent rounded-sm",
                  { "bg-accent": currentPath === href }
                ]}
              >
                {label}
              </a>
            ))}
          </div>
        </div>
        <a 
          href="/training" 
          class:list={[
            "text-sm font-medium",
            { "text-primary": currentPath === "/training" }
          ]}
        >
          Training
        </a>
        <a 
          href="/getting-started" 
          class:list={[
            "text-sm font-medium",
            { "text-primary": currentPath === "/getting-started" }
          ]}
        >
          Getting Started
        </a>
      </nav>
    </div>
    <div class="ml-auto flex items-center space-x-4">
      <a 
        href="/contact" 
        class:list={[
          "text-sm font-medium",
          { "text-primary": currentPath === "/contact" }
        ]}
      >
        Contact
      </a>
    </div>
  </div>
</header>