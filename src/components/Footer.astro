---
import { Image } from 'astro:assets';
import { Mail, MapPin, Phone, ExternalLink, Twitter, Github } from 'lucide-astro';
import { resourcesNav, servicesNav } from '../config/navigation';
import { getImagePath } from '../utils/images';

// Use services navigation for the footer
const footerServices = [...servicesNav];
const logoPath = getImagePath('LOGO_GIS.png');
---

<footer class="border-t">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <div class="flex items-center space-x-2 mb-4">
          <Image
            src={logoPath}
            alt="RCC GIS Logo"
            width={100}
            height={33}
            class="h-8 w-auto"
          />
        </div>
        <div class="space-y-2">
          <div class="flex items-center">
            <Mail class="h-5 w-5 mr-2 text-muted-foreground" />
            <a href="mailto:rcc-gis@uchicago.edu" class="text-sm text-muted-foreground hover:text-foreground">rcc-gis@uchicago.edu</a>
          </div>
          <div class="flex items-center">
            <MapPin class="h-5 w-5 mr-2 text-muted-foreground" />
            <span class="text-sm text-muted-foreground">Regenstein Library, Room 216</span>
          </div>
          <div class="flex items-center">
            <Phone class="h-5 w-5 mr-2 text-muted-foreground" />
            <a href="tel:+17737029474" class="text-sm text-muted-foreground hover:text-foreground">(773) 702-9474</a>
          </div>
        </div>
      </div>
      <div>
        <h3 class="font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          {resourcesNav.map(({ href, label }) => (
            <li>
              <a href={href} class="text-sm text-muted-foreground hover:text-foreground">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="font-semibold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          <a href="https://twitter.com/uchicago_rcc" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-foreground">
            <span class="sr-only">Twitter</span>
            <Twitter class="h-5 w-5" />
          </a>
          <a href="https://github.com/rcc-uchicago" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-foreground">
            <span class="sr-only">GitHub</span>
            <Github class="h-5 w-5" />
          </a>
        </div>
      </div>
      <div>
        <h3 class="font-semibold mb-4">Services</h3>
        <ul class="space-y-2">
          {footerServices.map(({ href, label }) => (
            <li>
              <a href={href} class="text-sm text-muted-foreground hover:text-foreground">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="font-semibold mb-4">Contact</h3>
        <ul class="space-y-2">
          <li>
            <a href="/contact" class="text-sm text-muted-foreground hover:text-foreground">
              Get Support
            </a>
          </li>
          <li>
            <p class="text-sm text-muted-foreground">
              Office Hours:<br />
              Monday-Friday<br />
              9:00 AM - 5:00 PM
            </p>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      <p> {new Date().getFullYear()} The University of Chicago. All rights reserved.</p>
    </div>
  </div>
</footer>