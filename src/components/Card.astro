---
// Import Lucide icons
import * as LucideIcons from 'lucide-astro';

interface Props {
  title: string;
  icon?: keyof typeof LucideIcons;
  class?: string;
}

const { title, icon, class: className } = Astro.props;

// Get the icon component if it exists
const IconComponent = icon ? LucideIcons[icon] : null;
---

<div class:list={["rounded-lg border bg-card text-card-foreground shadow-sm", className]}>
  <div class="flex flex-col space-y-1.5 p-6">
    {IconComponent && <IconComponent class="h-6 w-6 mb-2" />}
    <h3 class="text-2xl font-semibold leading-none tracking-tight">{title}</h3>
  </div>
  <div class="p-6 pt-0">
    <slot />
  </div>
</div>