---
interface Props {
  title: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className } = Astro.props;
---

<div class:list={["rounded-lg border bg-card text-card-foreground shadow-sm", className]}>
  <div class="flex flex-col space-y-1.5 p-6">
    {icon && <Icon name={icon} class="h-6 w-6 mb-2" />}
    <h3 class="text-2xl font-semibold leading-none tracking-tight">{title}</h3>
  </div>
  <div class="p-6 pt-0">
    <slot />
  </div>
</div>